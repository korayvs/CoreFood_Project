@model UrunEkle
@{
    ViewData["Title"] = "AddFood";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h2>Food Add Page</h2>
<br />

<form class="form-group" action="AddFood" asp-asp-controller="Food" method="post" enctype="multipart/form-data">

    <label>Food Name</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Price</label>
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    <label>Stock</label>
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    <label>Choose Image</label>
    <input type="file" name="ImageUrl" />
    <br />
    <label>Category</label>
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
    <br />
    <label>Description</label>
    @Html.TextAreaFor(x => x.Description, 3, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Save</button>

</form>